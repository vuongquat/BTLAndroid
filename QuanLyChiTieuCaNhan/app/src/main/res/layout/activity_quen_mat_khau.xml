<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".QuenMatKhauAcitivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Quên mật khẩu"
                android:textColor="#2196F3"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:text="Tài khoản"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtTaiKhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nhập tài khoản"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="SĐT"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtSDT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nhập số điện thoại"
                android:inputType="phone" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Mật khẩu mới"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtMatKhauMoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nhập mật khẩu mới"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Xác thực mật khẩu"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txtNhapLaiMK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnLayMatKhau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lấy lại mật khẩu" />

            <Button
                android:id="@+id/btnQuayVe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_horizontal"
                android:background="#00FFFFFF"
                android:text="Quay Về" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>